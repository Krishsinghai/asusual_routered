<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="min-h-screen flex flex-col md:flex-row">
        <!-- Sidebar - Same as dashboard -->
        <div class="bg-indigo-800 text-white w-full md:w-64 p-4">
            <div class="mb-8 p-4 border-b border-indigo-700">
                <h1 class="text-2xl font-bold">Admin Dashboard</h1>
                <p class="text-indigo-300 text-sm">AsUsual</p>
            </div>
            
            <nav class="space-y-2">
                <a href="/add-product" class="flex items-center space-x-2 p-3 rounded-lg bg-indigo-700 transition">
                    <i class="fas fa-plus w-5"></i>
                    <span>Add Product</span>
                </a>
                <a href="/edit-product" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
                    <i class="fas fa-edit w-5"></i>
                    <span>Edit Quantity</span>
                </a>
                <a href="/edit-poster" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
                    <i class="fas fa-image w-5"></i>
                    <span>Edit Posters</span>
                </a>
                <a href="/add-coupon" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
                    <i class="fas fa-tag w-5"></i>
                    <span>Add Coupon</span>
                </a>
                <a href="/admin/contacts" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
                    <i class="fas fa-envelope w-5"></i>
                    <span>Contact Requests</span>
                </a>
                <a href="/orders" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
                    <i class="fas fa-shopping-bag w-5"></i>
                    <span>Orders</span>
                </a>
            </nav>
            
            <div class="mt-auto pt-4 border-t border-indigo-700">
                <form action="/admin/logout" method="POST">
                    <button type="submit" class="flex items-center space-x-2 w-full p-3 rounded-lg hover:bg-indigo-700 transition text-red-300 hover:text-red-200">
                        <i class="fas fa-sign-out-alt w-5"></i>
                        <span>Logout</span>
                    </button>
                </form>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="flex-1 p-8">
            <div class="bg-white rounded-xl shadow-md p-6">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-semibold text-gray-800">Add New Product</h2>
                </div>
                
                <form action="/add-product" method="POST" enctype="multipart/form-data" class="space-y-6">
                    <!-- Product Info Section -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Product Name</label>
                            <input type="text" id="name" name="name" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div>
                            <label for="price" class="block text-sm font-medium text-gray-700 mb-1">Price</label>
                            <input type="number" id="price" name="price" step="0.01" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div>
                            <label for="brand" class="block text-sm font-medium text-gray-700 mb-1">Brand</label>
                            <input type="text" id="brand" name="brand" placeholder="AsUsual"
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div>
                            <label for="color" class="block text-sm font-medium text-gray-700 mb-1">Color</label>
                            <input type="text" id="color" name="color" placeholder="Color"
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div>
                            <label for="category" class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                            <select id="category" name="category"
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                                <option value="">Select Category</option>
                                <option value="Regular">Regular</option>
                                <option value="Oversized">Oversized</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- Description -->
                    <div>
                        <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                        <textarea id="description" name="description" required rows="4"
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                    </div>
                    
                    <!-- Size Quantities -->
                    <div class="border-t pt-4">
                        <h3 class="text-lg font-medium text-gray-700 mb-4">Size Quantities</h3>
                        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
                            <div>
                                <label for="x-small" class="block text-sm font-medium text-gray-700 mb-1">X-Small</label>
                                <input type="number" id="x-small" name="sizes[xsmall]" min="0" value="0"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                            </div>
                            <div>
                                <label for="small" class="block text-sm font-medium text-gray-700 mb-1">Small</label>
                                <input type="number" id="small" name="sizes[small]" min="0" value="0"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                            </div>
                            <div>
                                <label for="medium" class="block text-sm font-medium text-gray-700 mb-1">Medium</label>
                                <input type="number" id="medium" name="sizes[medium]" min="0" value="0"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                            </div>
                            <div>
                                <label for="large" class="block text-sm font-medium text-gray-700 mb-1">Large</label>
                                <input type="number" id="large" name="sizes[large]" min="0" value="0"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                            </div>
                            <div>
                                <label for="xlarge" class="block text-sm font-medium text-gray-700 mb-1">X-Large</label>
                                <input type="number" id="xlarge" name="sizes[xlarge]" min="0" value="0"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Images Upload -->
                    <div class="border-t pt-4">
                        <h3 class="text-lg font-medium text-gray-700 mb-4">Product Images</h3>
                        <div class="space-y-4">
                            <div>
                                <label for="front_image" class="block text-sm font-medium text-gray-700 mb-1">Front Image (Required)</label>
                                <input type="file" id="front_image" name="front_images" required
                                    class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
                            </div>
                            <div>
                                <label for="back_image" class="block text-sm font-medium text-gray-700 mb-1">Back Image (Required)</label>
                                <input type="file" id="back_image" name="back_image" required
                                    class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
                            </div>
                            <div>
                                <label for="images" class="block text-sm font-medium text-gray-700 mb-1">Additional Images (Max 5)</label>
                                <input type="file" id="images" name="images" multiple accept="image/*" required
                                    class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
                                <p class="mt-1 text-sm text-gray-500">Select multiple images (max 5)</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Submit Button -->
                    <div class="flex justify-end pt-4 border-t">
                        <button type="submit"
                            class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition flex items-center gap-2">
                            <i class="fas fa-plus"></i> Add Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add this script section to your HTML -->
<script>
    document.querySelector('form').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const form = e.target;
      const submitBtn = form.querySelector('button[type="submit"]');
      const originalBtnText = submitBtn.innerHTML;
      
      try {
        // Show loading state
        submitBtn.disabled = true;
        submitBtn.innerHTML = `
          <i class="fas fa-spinner fa-spin"></i> Adding Product...
        `;
        
        const formData = new FormData(form);
        
        const response = await fetch('/add-product', {
          method: 'POST',
          body: formData
        });
        
        const result = await response.json();
        
        if (!response.ok) {
          throw new Error(result.message || 'Failed to add product');
        }
        
        // Show success message
        alert('Product added successfully!');
        form.reset();
        
      } catch (error) {
        console.error('Error:', error);
        alert(`Error: ${error.message}`);
      } finally {
        // Reset button state
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalBtnText;
      }
    });
  </script>
</body>
</html>