    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Edit Posters</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    </head>
    <body class="bg-gray-100">
        <div class="min-h-screen flex flex-col md:flex-row">
            <!-- Sidebar -->
            <div class="bg-indigo-800 text-white w-full md:w-64 p-4">
                <div class="mb-8 p-4 border-b border-indigo-700">
                    <h1 class="text-2xl font-bold">Admin Dashboard</h1>
                    <p class="text-indigo-300 text-sm">AsUsual</p>
                </div>

                <nav class="space-y-2">
                    <a href="/products/add-product" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
                        <i class="fas fa-plus w-5"></i>
                        <span>Add Product</span>
                    </a>
                    <a href="/products/edit-product" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
                        <i class="fas fa-edit w-5"></i>
                        <span>Edit Products</span>
                    </a>
                    <a href="/posters/edit-poster" class="flex items-center space-x-2 p-3 rounded-lg bg-indigo-700 transition">
                        <i class="fas fa-image w-5"></i>
                        <span>Edit Posters</span>
                    </a>
                    <a href="/coupons" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
                        <i class="fas fa-tag w-5"></i>
                        <span>Add Coupon</span>
                    </a>
                    <a href="/admin/contacts" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
                        <i class="fas fa-envelope w-5"></i>
                        <span>Contact Requests</span>
                    </a>
                    <a href="/orders" class="flex items-center space-x-2 p-3 rounded-lg hover:bg-indigo-700 transition">
                        <i class="fas fa-shopping-bag w-5"></i>
                        <span>Orders</span>
                    </a>
                </nav>
                
                <div class="mt-auto pt-4 border-t border-indigo-700">
                    <form action="/admin/logout" method="POST">
                        <button type="submit" class="flex items-center space-x-2 w-full p-3 rounded-lg hover:bg-indigo-700 transition text-red-300 hover:text-red-200">
                            <i class="fas fa-sign-out-alt w-5"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </div>
            </div>
            
            <!-- Main Content -->
            <div class="flex-1 p-8">
                <div class="bg-white rounded-xl shadow-md p-6 mb-8">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Edit Notification</h2>
                    <form action="/posters/update-notification" method="POST" class="space-y-4">
                        <div>
                            <label for="notification" class="block text-sm font-medium text-gray-700 mb-2">Notification Message</label>
                            <textarea id="notification" name="notification" rows="3"
                                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-indigo-500 focus:border-indigo-500 resize-none"><%= notification.notification %></textarea>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition flex items-center gap-2">
                                <i class="fas fa-paper-plane"></i> Update Notification
                            </button>
                        </div>
                    </form>
                </div>

                <div class="bg-white rounded-xl shadow-md p-6">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-2xl font-semibold text-gray-800">Edit Homepage Posters</h2>
                    </div>
                    
                    <!-- Posters List -->
                    <div class="space-y-6 mb-8">
                        <% for (let i = 0; i < 3; i++) { %>
                            <div class="border rounded-lg p-4 flex justify-between items-center">
                                <div class="flex items-center space-x-4">
                                    <% if (poster.image[i]) { %>
                                        <img src="<%= poster.image[i] %>" alt="Poster <%= i+1 %>" class="h-16 w-16 object-cover rounded">
                                    <% } else { %>
                                        <div class="h-16 w-16 bg-gray-200 rounded flex items-center justify-center">
                                            <i class="fas fa-image text-gray-400"></i>
                                        </div>
                                    <% } %>
                                    <div>
                                        <h3 class="font-medium"><%= poster.Heading[i] || 'No heading set' %></h3>
                                        <p class="text-sm text-gray-600"><%= poster.Title[i] || 'No title set' %></p>
                                    </div>
                                </div>
                                <button onclick="openEditModal(<%= i %>)" 
                                        class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition">
                                    Edit
                                </button>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Modal -->
        <div id="editModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
            <div class="bg-white rounded-lg p-6 w-full max-w-md">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-lg font-medium">Edit Poster <span id="posterNumber"></span></h3>
                    <button onclick="closeEditModal()" class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                
                <form id="editPosterForm" method="POST" enctype="multipart/form-data" class="space-y-4">
                    <input type="hidden" id="posterIndex" name="posterIndex">
                    
                    <div>
                        <label for="editPosterImage" class="block text-sm font-medium text-gray-700 mb-2">Upload New Image</label>
                        <input type="file" id="editPosterImage" name="posterImage" accept="image/*"
                            class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
                    </div>
                    
                    <div>
                        <label for="editPosterHeading" class="block text-sm font-medium text-gray-700 mb-2">Heading</label>
                        <input type="text" id="editPosterHeading" name="Heading"
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                    </div>
                    
                    <div>
                        <label for="editPosterTitle" class="block text-sm font-medium text-gray-700 mb-2">Title</label>
                        <input type="text" id="editPosterTitle" name="Title"
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                    </div>
                    
                    <div class="flex justify-end space-x-3 pt-2">
                        <button type="button" onclick="closeEditModal()" 
                                class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                            Cancel
                        </button>
                        <button type="submit"
                                class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <script>
            // Store poster data in a JavaScript variable
            const posters = {
                image: [
                    '<%= poster.image[0] || "" %>',
                    '<%= poster.image[1] || "" %>',
                    '<%= poster.image[2] || "" %>'
                ],
                Heading: [
                    '<%= poster.Heading[0] || "" %>',
                    '<%= poster.Heading[1] || "" %>',
                    '<%= poster.Heading[2] || "" %>'
                ],
                Title: [
                    '<%= poster.Title[0] || "" %>',
                    '<%= poster.Title[1] || "" %>',
                    '<%= poster.Title[2] || "" %>'
                ]
            };

            function openEditModal(index) {
                document.getElementById('posterIndex').value = index;
                document.getElementById('posterNumber').textContent = index + 1;
                document.getElementById('editPosterHeading').value = posters.Heading[index];
                document.getElementById('editPosterTitle').value = posters.Title[index];
                
                const form = document.getElementById('editPosterForm');
                form.action = `/posters/edit-poster/${index}`;
                
                document.getElementById('editModal').classList.remove('hidden');
            }
            
            function closeEditModal() {
                document.getElementById('editModal').classList.add('hidden');
            }
        </script>
    </body>
    </html>